<div class="container">
  <div class="jumbotron-fluid">
    <h3>Enter Your Information Below to Get Started!</h3>
  </div>

  <div class="row"></div>
    <div class="col-sm-6 align-items-center">
      <form id="form-signup" style="width:333px">
        <label for="first-name">First Name:</label>
        <input type="text" name="first-name" id="first-name" style="position:absolute;width:70%;right:0" required>
        <br>
        <label for="last-name">Last Name:</label>
        <input type="text" name="last-name" id="last-name" style="position:absolute;width:70%;right:0" required>
        <br>
        <label for="email">Email:</label>
        <input type="email" name="email" id="email" style="position:absolute;width:70%;right:0" required>
        <br>
        <label for="password">Password:</label>
        <input type="password" name="password" id="password" style="position:absolute;width:70%;right:0" required>
        <br>
        <label for="confirm-password">Confirm Password:</label>
        <input type="password" name="confirm-password" id="confirm-password" style="position:absolute;width:70%;right:0" required>
        <br>
        <input type="submit" value="Sign Up" id="btn-signup" style="align-self:center">
      </form>
    </div>






</div>
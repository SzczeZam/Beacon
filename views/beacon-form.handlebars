{{> header}}

<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-center">
    <div class="col-12">
      <div style="text-align:center">
        <h3 class="mb-3">Create a New Beacon!</h3>
      </div>
      <div class="text-right d-flex justify-content-center">
        <form id="form-beacon">
          <div class="mb-1"><label for="title" class="text-right">Title:</label>
            <input type="text" name="title" id="title" style="max-width:500px;min-width:300px;text-align:center" required>
          </div>
          <div class="mb-1"><label class="text-right" for="category">Category:</label>
            <select name="category" id="category" style="max-width:500px;min-width:300px;text-align:center" required>
              <option style="max-width:500px;min-width:300px;text-align:center" value="" disabled selected>Please select a category</option>
              <option value="Football">Football</option>
              <option value="Soccer">Soccer</option>
              <option value="Baseball">Baseball</option>
              <option value="Yoga">Yoga</option>
              <option value="Spirituality">Spirituality</option>
              <option value="Art">Art</option>
              <option value="Movies">Movies</option>
              <option value="Rap Music">Rap Music</option>
              <option value="Country Music">Country Music</option>
              <option value="Dogs">Dogs</option>
              <option value="Cats">Cats</option>
            </select>
          </div>
          <div class="mb-1"><label class="text-right" for="desc">Description:</label>
            <input type="text" name="desc" id="desc" style="max-width:500px;min-width:300px;text-align:center" required>
          </div>
          <div class="mb-1"><label class="text-right" for="address">Address:</label>
            <input type="text" name="address" id="address" style="max-width:500px;min-width:300px;text-align:center" required>
          </div>
          <div class="mb-1"><label class="text-right" for="start-time">Start Time:</label>
            <input type="time" name="start-time" id="start-time" style="max-width:500px;min-width:300px;text-align:center" required>
          </div>
          <div class="mb-1"><label class="text-right" for="end-time">End Time (optional):</label>
            <input type="time" name="end-time" id="end-time" style="max-width:500px;min-width:300px;text-align:center">
          </div>
          <div class="mb-1"><label class="text-right" for="date">Date:</label>
            <input type="date" name="date" id="date" style="max-width:500px;min-width:300px;text-align:center" required>
          </div>
          <div class="mt-3">
            <input type="submit" value="Create Beacon" id="btn-create-beacon" class="btn btn-primary btn-lg btn-block">
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

{{> footer}}

<script src="/js/beacon.js"></script>
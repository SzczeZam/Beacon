{{> header}}

<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
      <div class="col-sm-6">
        <div style="text-align:center">
        <h4>Create a New Beacon!</h4></div>
        <br>
          <form id="form-beacon">
            <label for="title">Title:</label>
            <input type="text" name="title" id="title" style="position:absolute;width:60%;right:0" required>
            <br>
            <label for="category">Category:</label>
            <select name="category" id="category" style="position:absolute;width:60%;right:0;margin-top:5px" required>
              <option value="" disabled selected>Please select a category</option>
              <option value="Football">Football</option>
              <option value="Soccer">Soccer</option>
              <option value="Baseball">Baseball</option>
              <option value="Yoga">Yoga</option>
              <option value="Spirituality">Spirituality</option>
              <option value="Art">Art</option>
              <option value="Movies">Movies</option>
              <option value="Rap Music">Rap Music</option>
              <option value="Country Music">Country Music</option>
              <option value="Dogs">Dogs</option>
              <option value="Cats">Cats</option>
            </select>
            <br>
            <label for="desc">Description:</label>
            <input type="text" name="desc" id="desc" style="position:absolute;width:60%;right:0" required>
            <br>
            <label for="address">Address:</label>
            <input type="text" name="address" id="address" style="position:absolute;width:60%;right:0" required>
            <br>
            <label for="start-time">Start Time:</label>
            <input type="time" name="start-time" id="start-time" style="position:absolute;width:60%;right:0" required>
            <br>
            <label for="end-time">End Time (optional):</label>
            <input type="time" name="end-time" id="end-time" style="position:absolute;width:60%;right:0">
            <br>
            <label for="date">Date:</label>
            <input type="date" name="date" id="date" style="position:absolute;width:60%;right:0" required>
            <br>
            <br>
            <input type="submit" value="Create Beacon" id="btn-create-beacon" style="position:absolute;right:0">
          </form>
    </div>
  </div>
</div>

{{> footer}}

<script src="/js/newBeacon.js"></script>